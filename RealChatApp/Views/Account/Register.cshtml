@model User
@{
    Layout = "_Layout";
}

<style>
    .register-container {
        max-width: 500px;
        margin: 5rem auto;
        padding: 2rem;
        background-color: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .register-title {
        text-align: center;
        margin-bottom: 2rem;
        font-weight: 600;
        color: #343a40;
    }

    .form-label {
        font-weight: 500;
    }

    .btn-register {
        width: 100%;
        padding: 0.6rem;
        font-weight: 500;
    }

    media (max-width: 576px) {
        .register-container

    {
        margin: 2rem 1rem;
        padding: 1.5rem;
    }

    }
</style>

<div class="register-container">
    <h2 class="register-title">📝 Create an Account</h2>

    <form asp-action="Register" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" name="Username" class="form-control" required placeholder="Choose a username" />
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" name="Password" class="form-control" required placeholder="Create a password" />
        </div>

        <div class="mb-3">
            <label class="form-label">Profile Picture</label>
            <input type="file" name="ProfileImage" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary btn-register">Register</button>
    </form>
</div>
